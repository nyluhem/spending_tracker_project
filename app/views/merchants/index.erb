<h1>Merchants</h1>

  <div class="add">
    <a class="btn" href="merchants/new">Add New Merchant</a>
  </div>

<% for merchant in @merchants %>
<p>Name: <%= merchant.name %></p>
<p>Associated Tags:
  <% for tag in  merchant.tag_name %>
    <%= tag.name + "," unless nil %>
  <% end %></p>

<p>Added: <%= merchant.time_added %></p>
<br>
<a class="btn" href="/merchants/<%= merchant.id %>/edit">Edit</a>
<form action="/merchants/<%= merchant.id %>/delete" method="POST">
  <button class="delete" type="delete">Delete</button>
</form>
<br>
<br>
<hr>
<% end %>
